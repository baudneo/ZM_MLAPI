# THE BASE DIRECTORY WHERE SERVER DATA WILL BE STORED.
# THIS DIRECTORY MUST BE WRITABLE, IT WILL BE CREATED IF IT DOES NOT EXIST.
DATA_DIR: "/tmp/zm_mlapi"

# Directory where the model files will be stored.
MODEL_DIR: ${DATA_DIR}/models
# Directory where the user database will be stored
DB_DIR: ${DATA_DIR}/db
# Directory where file logs will be stored
LOG_DIR: ${DATA_DIR}/logs

# address that mlapi will listen on (Default: 0.0.0.0 [All Interfaces])
HOST: 0.0.0.0
# port to listen on. (Default: 5000)
PORT: 5000
# FastAPI/Uvicorn reload - for development only (Default: no)
RELOAD: yes

#  the secret key that will be used to sign JWT tokens.
#  ***MAKE SURE YOU CHANGE THE DEFAULT VALUE***
JWT_SECRET: "CHANGE ME FOR SECURITY!!!!"

